void setup(){
  #ifndef ESP8266
  while (!Serial); // for Leonardo/Micro/Zero
#endif

  Serial.begin(9600); //INICIALIZA A SERIAL
  if(!bmp.begin(0x76)){ //SE O SENSOR NÃO FOR INICIALIZADO NO ENDEREÇO I2C 0x76, FAZ
    Serial.println(F("Sensor BMP280 não foi identificado! Verifique as conexões.")); //IMPRIME O TEXTO NO MONITOR SERIAL
    while(1); //SEMPRE ENTRE NO LOOP
  }
    Serial.println("Accelerometer Test"); Serial.println("");
  
  /* Initialise the sensor */
  if(!accel.begin())
  {
    /* There was a problem detecting the ADXL345 ... check your connections */
    Serial.println("Ooops, no ADXL345 detected ... Check your wiring!");
    while(1);
  }

  /* Set the range to whatever is appropriate for your project */
  accel.setRange(ADXL345_RANGE_16_G);
  // accel.setRange(ADXL345_RANGE_8_G);
  // accel.setRange(ADXL345_RANGE_4_G);
  // accel.setRange(ADXL345_RANGE_2_G);
  
  /* Display some basic information on this sensor */
  displaySensorDetails();
  
  /* Display additional settings (outside the scope of sensor_t) */
  displayDataRate();
  displayRange();
  Serial.println("");


Serial.println("Inicializando Display");
  display.init();

  display.flipScreenVertically();
  display.setFont(ArialMT_Plain_10);
}

void loop(){
    String tempInfo = "Temperatura: ";
    tempInfo += bmp.readTemperature();
    tempInfo += " *C (Grau Celsius)";

    String presInfo = "Pressão: ";
    presInfo += (bmp.readPressure());
    presInfo += " Pa (Pascal)";

    String altiInfo = "Altitude: ";
    altiInfo += (bmp.readAltitude(1013.25));
    altiInfo += " m (Metros)";

    sensors_event_t event; 
    accel.getEvent(&event);
    
    String acceInfo = "X: ";
    acceInfo += event.acceleration.x;
    acceInfo += " Y: ";
    acceInfo += event.acceleration.y;
    acceInfo += " Z: ";
    acceInfo += event.acceleration.z;
    acceInfo += " m/s² ";
    
   Serial.println(tempInfo);
   Serial.println(presInfo);
   Serial.println(altiInfo);
   Serial.println(acceInfo);
    
    Serial.println("-----------------------------------"); //IMPRIME UMA LINHA NO MONITOR SERIAL

  // Exibe info
  display.clear();
  drawInfo(tempInfo, presInfo, altiInfo, acceInfo);
  display.display();
  delay(3000);

}
